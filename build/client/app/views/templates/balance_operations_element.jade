td.operation-date #{model.formattedDate}
td.operation-title
    .hint--top(data-hint="#{model.hint}")
        span.infobulle.glyphicon.glyphicon-info-sign
    |  #{model.get('title')}
td.operation-amount.text-right
    - if(model.formattedAmount == null)
        | #{Number(model.get('amount')).money()}
    - else
        a(href="#{model.formattedAmount}", target="_blank")
            | #{Number(model.get('amount')).money()}